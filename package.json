{
  "name": "whasend",
  "version": "1.6.1",
  "releaseDate": "2025-11-11",
  "description": "whasend device desktop app with updated features like export patient, better message send today",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild -f -w better-sqlite3 --module-dir .",
    "clean": "npx rimraf release",
    "package-win": "npm run clean && electron-packager . WhatsappSender --platform=win32 --arch=x64 --out=release --overwrite --asar.unpack='**/{Assets,Jsonlogs,uploadedexcel,uploadedImages,dndExcel,patientExcel,logs,profiles.json,templates.json}'",
    "dist": "electron-builder -w --x64",
    "dist:portable": "electron-builder --win portable --x64",
    "dist:nsis": "electron-builder --win nsis --x64"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "better-sqlite3": "^11.10.0",
    "dayjs": "^1.11.18",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "systeminformation": "^5.27.10",
    "whatsapp-web.js": "^1.34.1",
    "xlsx": "^0.18.5",
  "electron-updater": "^4.6.5",
    "electron-log": "^4.4.7"
  },
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9",
    "rimraf": "^5.0.5"
  }
  ,
  "build": {
    "appId": "com.example.whasend",
    "productName": "whasend",
    "files": [
      "**/*",
      "!**/test/**",
      "!**/tests/**",
      "!**/*.map",
      "!**/.vscode/**",
      "!**/node_modules/*/{test,tests,example,examples,doc,docs}"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**"
    ],
    "extraResources": [
      "assets/db/patients.db"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "icon": "assets/icon.ico",
    "compression": "maximum",
    "win": {
      "target": ["portable"],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "vipulpattel",
        "repo": "Whasend"
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false
      ,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    }
  }
}
